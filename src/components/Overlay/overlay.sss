.overlay
  background-color: rgba(0, 0, 0, 0.85)
  position: fixed
  top: 0
  left: 0
  width: 100%
  height: 100%
  z-index: 5
  visibility: hidden
  opacity: 0
  transition-duration: 0.4s

.overlay-show
  opacity: 1
  visibility: visible

.overlay-hidden
  display: none

.overlay-frame
  position: relative
  top: 50%
  bottom: 0
  width: 100%
  height: 100%
  max-height: 70%
  max-width: 70%
  text-indent: -9999px
  margin: 0 auto
  z-index: 6
  transform: translate(0,-50%)

.overlay-frame-image
  border: 6px solid rgba(70, 80, 80, 0.3)
  position: absolute
  padding: 0.25rem 0
  top: 50%
  left: 50%
  max-width: 100%
  max-height: 100%
  transform: translate(-50%,-50%)