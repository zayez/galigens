.gallery-wrapper
  max-width: 900px
  margin: 0 auto

.gallery-list
  display: flex
  flex-wrap: wrap
  justify-content: space-evenly
  align-items: center
  margin-top: 1rem

.gallery-item
  display: flex
  flex-flow: column

.gallery-item >
a > img
  max-width: 250px
  padding: .5em
  border: 1px solid transparent

  &:hover
    border: 1px solid var(--header-bg)